@model IEnumerable<DatVe.Models.tb_NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
<div class="content-wrapper">
    <h2 style="text-align:center;">DS nhân vên</h2>
    <p>
        @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenNhanVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tuoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tb_DoiBay.CoTruong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tb_Nghiepvu.Ten_nghiep_vu)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.TenNhanVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tuoi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tb_DoiBay.CoTruong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tb_Nghiepvu.Ten_nghiep_vu)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.MaNhanVien })" class="btn btn-warning" role="button">Sửa</a>
                    <a href="@Url.Action("Delete", new { id = item.MaNhanVien })" class="btn btn-danger" role="button">Xóa</a>
                </td>
            </tr>
        }

    </table>
</div>
</div>