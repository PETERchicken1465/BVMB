@model IEnumerable<DatVe.Models.tb_SanBay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="main-panel">
    <div class="content-wrapper">
        <h2>Sân bay </h2>
        <p>
            @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-success" })
        </p>
        <table class="table">
            <tr>
                <th>
                    Tên
                </th>
                <th>
                    Thành Phố
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSanBay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThanhPho)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.MaSanBay })" class="btn btn-warning" role="button">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = item.MaSanBay })" class="btn btn-danger" role="button">Xóa</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>