@model IEnumerable<DatVe.Models.tb_NguoiDaiDien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <h2 style="text-align:center;">Quản Lý Đặt Vé</h2>      
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenNguoiDaiDien)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tb_KhachHang.HovaTen)
                </th>
                <th>Số lượng </th>
                <th> Tổng tiền</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNguoiDaiDien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tb_KhachHang.HovaTen)
                    </td>
                    <td>@item.SoLuong vé </td>
                    <td>@string.Format("{0:#,##0,0}", @item.TongTien) VNĐ</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.MaNguoiDaiDien })" class="btn btn-warning" role="button">Gửi</a>
                        <a href="@Url.Action("Delete", new { id = item.MaNguoiDaiDien })" class="btn btn-danger" role="button">Xóa</a>
                    </td>
                </tr>
            }

        </table>
</div>
</div>