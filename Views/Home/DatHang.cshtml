@using DatVe.Models
@model List<Giohang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link type="text/css" rel="stylesheet" href="~/Content/Client1/loadcss.css" />
<style>
    .gradient-custom {
        background: #6a11cb;
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }

    .seat {
        width: 28px;
        height: 28px;
        margin: 2px;
        display: inline-block;
        background-color: #ccc;
        border: 1px solid #aaa;
        text-align: center;
        line-height: 30px;
        cursor: pointer;
        color: #333;
        text-decoration: auto;
    }


    .registration-form {
        text-align: left;
    }

        .registration-form label {
            display: block;
            margin-bottom: 5px;
        }

        .registration-form input,
        .registration-form select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .registration-form button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .registration-form button:hover {
                background-color: #45a049;
            }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<section class="h-100 gradient-custom">
    <span class="loader" id="loader"></span>
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h2 class="mb-0">Thông Tin Đặt Vé  </h2>
                    </div>
                    <div class="card-body" id="chuyenBayDataContainer" style="display: none;">
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                               
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                            <h4>@(item.DiemTu ?? "--") <svg xmlns="http://www.w3.org/2000/svg" height="16" width="18" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.1 by @@fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M482.3 192c34.2 0 93.7 29 93.7 64c0 36-59.5 64-93.7 64l-116.6 0L265.2 495.9c-5.7 10-16.3 16.1-27.8 16.1l-56.2 0c-10.6 0-18.3-10.2-15.4-20.4l49-171.6L112 320 68.8 377.6c-3 4-7.8 6.4-12.8 6.4l-42 0c-7.8 0-14-6.3-14-14c0-1.3 .2-2.6 .5-3.9L32 256 .5 145.9c-.4-1.3-.5-2.6-.5-3.9c0-7.8 6.3-14 14-14l42 0c5 0 9.8 2.4 12.8 6.4L112 192l102.9 0-49-171.6C162.9 10.2 170.6 0 181.2 0l56.2 0c11.5 0 22.1 6.2 27.8 16.1L365.7 192l116.6 0z" /></svg>   @(item.DiemDen ?? "--")</h4>
                                            <h6>@item.NgayCatCanh.ToString("ddd, dd/MM/yyyy" ?? "--") | @item.ThoiGianBay.ToString("HH:mm" ?? "--") - @item.ThoiGianHaCanh.ToString("HH:mm") | @(item.SoHieu ?? "--")</h6>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 pb-0">
                                            Họ Tên Khách hàng  :
                                            <h5>@{ item.hotenkh = Session["TaiKhoan"].ToString(); @item.hotenkh; }</h5>

                                        </li>

                                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 pb-0">
                                            Mã Ghế :
                                            <h5> @(item.ChoNgoi ?? "Trống")</h5>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center px-0 pb-0">
                                            Giá Vé:
                                            <h5> @string.Format("{0:#,##0,0}", item.Giave) VNĐ</h5>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                            Số Lượng
                                            <h5>@ViewBag.TongSoLuong vé</h5>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                            <div>
                                                <h4>Tổng cộng</h4> (Đã bao gồm VAT)

                                            </div>
                                            <h2 style="color: red;">@string.Format("{0:#,##0,0}", (ViewBag.TongTien ?? 0) * ViewBag.TongSoLuong ?? 0) VNĐ</h2>
                                        </li>
                                    </ul>

                                    <a href="/Home/DatHang" class="btn btn-primary btn-lg btn-block" role="button">THANH TOÁN</a>
                                }
                                
                            </div>

                        <script>
                            setTimeout(function () {
                                var loader = document.getElementById("loader");
                                var chuyenBayDataContainer = document.getElementById("chuyenBayDataContainer");
                                loader.style.display = "none";
                                chuyenBayDataContainer.style.display = "block";
                            }, 1000);                           
                        </script>
                    </div>
                    </div>
                </div>
            </div>   
        </div>   
</section>




